{
  "extends": "tslint:recommended",
  "rules": {
    "max-line-length": {
      "options": [
        120
      ]
    },
    "new-parens": true,
    "no-arg": true,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": false,
    "curly": false,
    "no-var-requires": false,
    "object-literal-sort-keys": false,
    "no-console": false,
    "interface-name": false,
    "semicolon": [false, "never"]
  },
  "jsRules": {
    "max-line-length": {
      "options": [
        120
      ]
    }
  }
}